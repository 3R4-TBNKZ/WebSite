---
import SectionSeparator from '../components/common/SectionSeparator.astro';
import Benchmarks from '../components/sections/Benchmarks.astro';
import FAQ from '../components/sections/FAQ.astro';
import Features from '../components/sections/Features.astro';
import Hero from '../components/sections/Hero.astro';
import JoinCommunity from '../components/sections/JoinCommunity.astro';
import LinusTechTips from '../components/sections/LinusTechTips.astro';
import OpenSource from '../components/sections/OpenSource.astro';
import ProTestimonials from '../components/sections/ProTestimonials.astro';
import Reviews from '../components/sections/Reviews.astro';
import Why3R4 from '../components/sections/Why3R4.astro';
import DefaultLayout from '../layouts/DefaultLayout.astro';

const sections = [
  Hero,
  Features,
  Why3R4,
  Benchmarks,
  ProTestimonials,
  Reviews,
  LinusTechTips,
  OpenSource,
  FAQ,
  JoinCommunity,
];
---

<DefaultLayout>
  {
    sections.map((Section, index) => (
      <>
        <Section />
        {index < sections.length - 1 && <SectionSeparator />}
      </>
    ))
  }
</DefaultLayout>
